[Unit]
Description=Fetch CernVM Online key-based contextualization
After=local-fs.target network-online.target cernvm.service
Requires=network-online.target
Wants=local-fs.target cernvm.service

[Service]
Type=oneshot
ExecStart=/usr/sbin/cernvm-online.sh site
RemainAfterExit=yes
TimeoutSec=0

# Output needs to appear in instance console output
StandardOutput=journal+console

[Install]
WantedBy=multi-user.target
